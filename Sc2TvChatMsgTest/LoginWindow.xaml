<Window x:Class="Sc2TvChatMsgTest.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="140" Width="300" xmlns:my="clr-namespace:Sc2TvChatMsgTest">
    <Grid>
        <my:TextBoxWatermarked Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" x:Name="loginBox" VerticalAlignment="Top" Width="254" Watermark="Login"/>
        <my:TextBoxWatermarked Height="23" HorizontalAlignment="Left" Margin="12,41,0,0" x:Name="passBox" VerticalAlignment="Top" Watermark="Password" Width="254" />
        <Button Content="Login" Height="23" HorizontalAlignment="Left" Margin="191,70,0,0" Name="loginBtn" VerticalAlignment="Top" Width="75" Click="loginBtn_Click" />
        <CheckBox Content="Save" Height="16" HorizontalAlignment="Left" Margin="135,74,0,0" Name="saveBox" VerticalAlignment="Top" />
    </Grid>
</Window>
